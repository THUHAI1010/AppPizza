<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCE4EC"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:backgroundTint="#D81B60">

        <TextView
            android:id="@+id/toolbar_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Change Password"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/black"
            android:src="@drawable/ic_arrow_forward_black_24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/home_pizza" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtoldpass"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/boggocedt"
            android:fontFamily="@font/poppinregular"
            android:hint="Nhập mật khẩu cũ"
            android:inputType="textPassword"

            android:paddingLeft="20dp"

            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:theme="@style/foating" />

        <EditText
            android:id="@+id/edtpassnew"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/boggocedt"
            android:fontFamily="@font/poppinregular"
            android:hint="Nhập mật khẩu mới"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:theme="@style/foating" />

        <EditText
            android:id="@+id/edtxacnhanpass"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/boggocedt"
            android:fontFamily="@font/poppinregular"
            android:hint="Nhập lại mật khẩu"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:theme="@style/foating" />

        <Button
            android:id="@+id/btnchangepassword"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:text="CHANGE PASSWORD"
            android:textSize="16sp"
            app:backgroundTint="#E53935" />

    </LinearLayout>


</LinearLayout>